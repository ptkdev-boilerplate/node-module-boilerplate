{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"sourceMap": true,
		"outDir": "./dist/",
		"lib": ["es2017", "es7", "es6", "DOM"],
		"baseUrl": ".",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"typeRoots": ["app/**/types", "node_modules/@types"]
	},
	"include": ["app/**/*.test.ts"],
	"exclude": ["node_modules/*", "__sapper__/*", "dist/*"]
}
