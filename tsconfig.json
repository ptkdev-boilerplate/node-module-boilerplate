{
	"compilerOptions": {
		"module": "ESNEXT",
		"target": "ES2019",
		"sourceMap": true,
		"outDir": "./dist/",
		"baseUrl": ".",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": ["/types", "/node_modules/@types"]
	},
	"include": ["app/**/*", "configs/**/*", "translations/**/*"],
	"exclude": ["node_modules/*", "dist/*", "scripts/*", "app/modules/run.ts"]
}
